{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    //
    // This VSCode development workflow is intended to work on
    // MacOS, Linux and Windows (with Powershell>=5.1).
    //
    // Use the Install Deploy Dependencies tasks to install the necessary
    // build and test packages into the system environment.
    //
    // Use the Create Venv task to create a virtual environment in the
    // designated directory. Select this environment using Select
    // Interpreter to auto-activate it via New Terminal.
    //
    // Remember to include any global Python bin (Scripts on Windows) in PATH.
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Create Venv",
            "type": "process",
            "command": "${config:python.defaultInterpreterPath}",
            "args": [
                "-m",
                "venv",
                "${config:venv}",
                //"--system-site-packages"
            ],
            "problemMatcher": []
        },
        {
            "label": "Run Local Version",
            "type": "process",
            "command": "${config:python.defaultInterpreterPath}",
            "args": [
                "-m",
                "pygpsclient",
                "--ntripcasteruser",
                "semuadmin",
                "--ntripcasterpassword",
                "testpassword",
                "--verbosity",
                "3"
            ],
            "options": {
                "cwd": "src"
            },
            "problemMatcher": []
        },
        {
            "label": "Install Deploy Dependencies",
            "type": "process",
            "command": "${config:python.defaultInterpreterPath}",
            "args": [
                "-m",
                "pip",
                "install",
                "--group",
                "deploy"
            ],
            "problemMatcher": []
        },
        {
            "label": "Clean",
            "type": "shell",
            "command": "rm",
            "args": [
                "-rfvd",
                "build",
                "dist",
                "htmlcov",
                "docs/_build",
                "${config:modulename}.egg-info",
            ],
            "windows": {
                "command": "rm",
                "args": [
                    "-R",
                    "-Path",
                    "'src/${config:modulename}.egg-info','build','dist','htmlcov','docs/_build'",
                    "-ErrorAction",
                    "SilentlyContinue" // doesn't work! - stops on exit code 1 anyway
                ]
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "Sort Imports",
            "type": "process",
            "command": "${config:python.defaultInterpreterPath}",
            "args": [
                "-m",
                "isort",
                "src",
                "--jobs",
                "-1"
            ],
            "problemMatcher": []
        },
        {
            "label": "Format",
            "type": "process",
            "command": "${config:python.defaultInterpreterPath}",
            "args": [
                "-m",
                "black",
                "src"
            ],
            "problemMatcher": []
        },
        {
            "label": "Pylint",
            "type": "process",
            "command": "${config:python.defaultInterpreterPath}",
            "args": [
                "-m",
                "pylint",
                "src"
            ],
            "problemMatcher": []
        },
        {
            "label": "Security",
            "type": "process",
            "command": "${config:python.defaultInterpreterPath}",
            "args": [
                "-m",
                "bandit",
                "-c",
                "pyproject.toml",
                "-r",
                "."
            ],
            "problemMatcher": []
        },
        {
            "label": "Test",
            "type": "process",
            "command": "${config:python.defaultInterpreterPath}",
            "args": [
                "-m",
                "pytest"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "Build",
            "type": "process",
            "command": "${config:python.defaultInterpreterPath}",
            "args": [
                "-m",
                "build",
                ".",
                "--wheel",
                "--sdist",
            ],
            "problemMatcher": [],
            "dependsOrder": "sequence",
            "dependsOn": [
                "Clean",
                "Security",
                "Sort Imports",
                "Format",
                "Pylint",
                "Test",
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Sphinx",
            "type": "process",
            "command": "sphinx-apidoc",
            "args": [
                "--ext-autodoc",
                "--ext-viewcode",
                "--templatedir=docs",
                "-f",
                "-o",
                "docs",
                "src/${config:modulename}"
            ],
            "problemMatcher": []
        },
        {
            "label": "Sphinx HTML",
            "type": "process",
            "command": "/usr/bin/make",
            "windows": {
                "command": "${workspaceFolder}/docs/make.bat"
            },
            "args": [
                "html"
            ],
            "options": {
                "cwd": "${workspaceFolder}/docs"
            },
            "dependsOrder": "sequence",
            "dependsOn": [
                "Sphinx"
            ],
            "problemMatcher": []
        },
        {
            "label": "Sphinx Deploy to S3", // needs AWS credentials
            "type": "process",
            "command": "aws",
            "args": [
                "s3",
                "cp",
                "${workspaceFolder}/docs/_build/html",
                "s3://www.semuconsulting.com/${config:modulename}/",
                "--recursive"
            ],
            "dependsOrder": "sequence",
            "dependsOn": [
                "Sphinx HTML"
            ],
            "problemMatcher": []
        },
        {
            "label": "Install Locally",
            "type": "process",
            "command": "${config:python.defaultInterpreterPath}",
            "args": [
                "-m",
                "pip",
                "install",
                "--upgrade",
                "--force-reinstall",
                "--find-links=${workspaceFolder}/dist",
                "${workspaceFolderBasename}",
                // "--target",
                // "${config:venv}/Lib/site-packages"
            ],
            "options": {
                "cwd": "dist"
            },
            "dependsOrder": "sequence",
            "dependsOn": [
                "Build",
                "Sphinx HTML"
            ],
            "problemMatcher": []
        }
    ]
}